body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  background #fff

.mt-40
  margin-top: 40px
.mt-20
  margin-top: 20px
.messages-wrapper
  margin-top: 20px

.post
  padding: 40px 30px 20px
  margin-top: 20px
  border-top: 1px solid #333
  color: alpha(#333, .8)

  a
    color black
    text-decoration none
    transition all .2s ease-in-out

    &:hover
      color alpha(black, .7)

.add-post-btn
  text-decoration none
  background alpha(blue, .5)
  padding: 15px 23px
  border-radius 5px
  color #ffff
  transition all .2s ease-in-out
  margin-bottom: 30px
  display: inline-block

  &:hover
    background alpha(blue, .7)

.author
  border-left 1px solid alpha(#fff, .8)
  padding-left: 20px
  margin-left: 20px
  font-size: 13px

.delete-article
  margin-left: 20px
.article-wrapper
  margin-top: 40px
  h2
    margin-bottom: 20px

.alert-error
  color: #a9442
  background-color: #f2dede
  border-color: #ebccd1

.alert-success_msg
  color: #3c763d
  background-color: #dff0d8
  border-color: #d6e9c6

.user-logged
  color #fff
