doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      a.navbar-brand(href='/') Node Learn
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href='/')
              | Home
              span.sr-only (current)
          if user
            li.nav-item
              a.nav-link(href='/articles/add') Add Article
        ul.navbar-nav.navbar-right
          if user
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle.user-logged#login-dropdown(href='#' role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Welcome #{user.name}
              .dropdown-menu(aria-labelledby="login-dropdown")
                a.dropdown-item(href='/users/logout') Logout
          else
            li.nav-item
              a.nav-link(href='/users/register') Register
            li.nav-item
              a.nav-link(href='/users/login') Login

    .container
      .messages-wrapper
        != messages('message', locals)
      if errors
        each error, i in errors
          div(class='alert alert-danger')=error.msg
      block content

    script(src='/bower_components/jquery/dist/jquery.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/javascripts/main.js')
